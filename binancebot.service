[Unit]
Description=Binance Trading Bot
After=network.target

[Service]
User=REPLACE_WITH_YOUR_USERNAME
WorkingDirectory=/home/REPLACE_WITH_YOUR_USERNAME/binancebot
ExecStart=/home/REPLACE_WITH_YOUR_USERNAME/binancebot/venv/bin/python /home/REPLACE_WITH_YOUR_USERNAME/binancebot/main.py --skip-test-trade
Restart=always
RestartSec=10
StandardOutput=append:/home/REPLACE_WITH_YOUR_USERNAME/binancebot/logs/bot_service.log
StandardError=append:/home/REPLACE_WITH_YOUR_USERNAME/binancebot/logs/bot_service_error.log
Environment=PYTHONUNBUFFERED=1

[Install]
WantedBy=multi-user.target